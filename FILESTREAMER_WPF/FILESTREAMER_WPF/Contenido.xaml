        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FILESTREAMER_WPF"
        mc:Ignorable="d"
        Title="Contenido" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tbContenido" HorizontalAlignment="Left" Height="356" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="792" TextChanged="TbContenido_TextChanged"/>
        <Button x:Name="btn" Content="Aceptar" HorizontalAlignment="Left" Height="48" Margin="315,361,0,0" VerticalAlignment="Top" Width="140" Click="Button_Click"/>
        <Button x:Name="btnDel" Content="Borrar" HorizontalAlignment="Left" Height="48" Margin="315,361,0,0" VerticalAlignment="Top" Width="140" Click="BtnDel_Click"/>

    </Grid>
</Window>
